        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">telepathy-farstream Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="farstream"/> and
