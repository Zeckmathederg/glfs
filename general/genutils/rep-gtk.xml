      <listitem>
        <para>Estimated disk space required: &rep-gtk-buildsize;</para>
      </listitem>
      <listitem>
        <para>Estimated build time: &rep-gtk-time;</para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Additional Downloads</bridgehead>
