        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">LXTerminal Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="vte2"/>
    </para>

    <bridgehead renderas="sect4">Optional</bridgehead>
