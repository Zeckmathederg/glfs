        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Mouse Tweaks Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="gsettings-desktop-schemas"/> and
      <xref linkend="gtk3"/>
    </para>

    <para condition="html" role="usernotes">User Notes:
