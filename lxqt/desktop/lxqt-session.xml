    <bridgehead renderas="sect3">lxqt-session Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="liblxqt"/>,
      (<xref linkend="lxqt-kwindowsystem"/> or
       <xref linkend="kf5-frameworks"/>), and
