        <term><command>ntfsclone</command></term>
        <listitem>
          <para>
            clones an NTFS filesystem.
          </para>
          <indexterm zone="ntfs-3g ntfsclone">
            <primary sortas="b-ntfsclone">ntfsclone</primary>
          </indexterm>
        </listitem>
      </varlistentry>

