        <listitem>
          <para>
            recovers a deleted file from an NTFS volume.
          </para>
          <indexterm zone="ntfs-3g ntfsundelete">
            <primary sortas="b-ntfsundelete">ntfsundelete</primary>
          </indexterm>
        </listitem>
      </varlistentry>

