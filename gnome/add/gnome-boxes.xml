        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">GNOME Boxes Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="clutter-gtk"/>,
      <xref linkend="gobject-introspection"/>,
      <xref linkend="gtk-vnc"/>,
