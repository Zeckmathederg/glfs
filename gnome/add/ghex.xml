      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Ghex Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="gnome-doc-utils"/> and
      <xref linkend="gtk3"/>
     </para>

    <bridgehead renderas="sect4">Recommended</bridgehead>
