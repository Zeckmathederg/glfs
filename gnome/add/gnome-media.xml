    <bridgehead renderas="sect3">GNOME Media Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para><xref linkend="libgnomeui"/>,
    <xref linkend="nautilus-cd-burner"/>,
