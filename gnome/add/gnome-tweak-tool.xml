        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">GNOME Tweak Tool Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="GConf"/>,
      <xref linkend="gsettings-desktop-schemas"/> and
