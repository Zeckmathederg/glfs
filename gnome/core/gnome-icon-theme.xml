    <bridgehead renderas="sect3">GNOME Icon Theme Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="hicolor-icon-theme"/>,
      <xref linkend="icon-naming-utils"/> and
      <xref linkend="intltool"/>
    </para>

