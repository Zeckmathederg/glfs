          /usr/include/at-spi-2.0,
          /usr/include/at-spi2-atk,
          /usr/lib/gnome-settings-daemon-3.0,
          /usr/share/defaults/at-spi2, and
          /usr/share/gtk-doc/html/libatspi (optional)
        </seg>
      </seglistitem>
    </segmentedlist>

