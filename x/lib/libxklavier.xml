        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">libxklavier Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="glib2"/>,
      <xref linkend="iso-codes"/>,
      <xref linkend="libxml2"/>, and
      <xref linkend="xorg7-lib"/>
    </para>

