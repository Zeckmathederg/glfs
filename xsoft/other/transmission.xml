    <bridgehead renderas="sect3">Transmission Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="openssl"/>,
      <xref linkend="curl"/>,
      <xref linkend="libevent"/> and
      <xref linkend="intltool"/>
    </para>

    <bridgehead renderas="sect4">Recommended (to build a GUI)</bridgehead>
    <para role="recommended">
      <xref linkend="gtk2"/> or
      <xref linkend="gtk3"/> (if both Gtk+ 2 and Gtk+ 3 are installed, configure
      defaults to using Gtk+ 3), or
      <xref linkend="qt4"/>.
    </para>

    <bridgehead renderas="sect4">Optional</bridgehead>
    <para role="optional">
      <xref linkend="doxygen"/>.
    </para>

    <para condition="html" role="usernotes">
