      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Parole Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="gst10-plugins-base"/> and
